<!DOCTYPE html>
<html lang="en">
<head>
    <partial name="./_BaseMetaTags.cshtml" />

    <link rel="stylesheet" asp-href-include="~/css/application-styles*.css" />

    <title>@ViewData["Title"]</title>
</head>
<body class="application">
    <noscript>
        Sorry, your browser does not support JavaScript!
    </noscript>

    <partial name="./_MainNavigation.cshtml" />

    <header class="application__header">
        
    </header>

    <main class="application__main">
        @RenderBody()
    </main>

    <footer class="application__footer">
        <partial name="./_MainFooter.cshtml" />
    </footer>

    @if (Context.Request.Path.Value.Contains(GlobalConstants.CONDUCT_TEST_PART_URL))
    {
        <div class="js-block-site-modal block-site-modal"></div>
        @Html.PartialAsync("_LeaveTestModal", new { Id = "leave-test-modal" }).Result
    }

    <script asp-src-include="~/js/libraries*.js" defer></script>
    <script asp-src-include="~/js/application*.js" defer></script>

    @RenderSection("Scripts", false)
</body>
</html>
