@if (Model.ErrorMessage != null)
{
    <div class="mb-3">
        <div class="toast align-items-center bg-danger text-white w-100 show" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    @Model.ErrorMessage
                </div>
                <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
}