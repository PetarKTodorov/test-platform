@model PageableResult<UserInformationViewModel>

@{
    ViewData["Title"] = "Users";
}

<h1 class="text-center">Users</h1>

<div class="container-fluid">
    <table id="users-table" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameForInnerType((UserInformationViewModel model) => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameForInnerType((UserInformationViewModel model) => model.Email)
                </th>
                <th>
                    @Html.DisplayNameForInnerType((UserInformationViewModel model) => model.CreatedOn)
                </th>
                <th>
                    @Html.DisplayNameForInnerType((UserInformationViewModel model) => model.IsDeleted)
                </th>
                <th>
                    @Html.DisplayNameForInnerType((UserInformationViewModel model) => model.DeletedOn)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Results)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => user.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.CreatedOn)
                    </td>
                    <td>
                        <input type="checkbox" class="flipswitch" checked="@user.IsDeleted" disabled />
                    </td>
                    <td>
                        @if (user.IsDeleted)
                        {
                            @Html.DisplayFor(modelItem => user.DeletedOn)
                        }
                        else
                        {
                            <span>Not deleted</span>
                        }
                    </td>
                    <td>
                        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modifyUserRoles">
                            Modify roles
                        </button>
                        <button type="button" class="btn btn-danger btn-sm">
                            <span class="icon-font icon-font--trash"></span>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @Html.PartialAsync("Pagination/_Pagination", Model).Result
</div>


<div class="modal fade js-modal-parent" id="modifyUserRoles" tabindex="-1" aria-labelledby="modifyUserRoles" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">User roles</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <select class="js-select2-modal" name="state">
                    <option value="AL">Alabama</option>
                    <option value="WY">Wyoming</option>
                </select>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
