<div class="modal fade js-modal-parent" id="update-user-modal" tabindex="-1" aria-labelledby="update-user-modal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Users" asp-action="Update" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Update user</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @Html.AntiForgeryToken()

                    <input type="text" class="user-id" name="userId" value="" hidden />

                    <div class="mb-3">
                        <span for="roles">Roles:</span>
                        <select id="roles" class="js-select2-modal js-roles form-control" name="userRoles">
                        </select>
                    </div>
                    <div class="mb-3">
                        <span for="subject-tags">Subject tags:</span>
                        <select id="subject-tags" class="js-select2-modal js-subject-tags form-control" name="userSubjectTags">
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
