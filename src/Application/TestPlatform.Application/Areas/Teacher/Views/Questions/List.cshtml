@model PageableResult<QuestionInformationVM>

@{
    ViewData["Title"] = "List All Questions";
}

<h1 class="text-center">List All Question</h1>

<div class="container-fluid px-5">
    <table id="users-table" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameForInnerType((QuestionInformationVM model) => model.OriginalQuestionTitle)
                </th>
                <th>
                    @Html.DisplayNameForInnerType((QuestionInformationVM model) => model.QuestionTypeName)
                </th>
                <th>
                    @Html.DisplayNameForInnerType((QuestionInformationVM model) => model.SubjectTagName)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => user.OriginalQuestionTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.QuestionTypeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.SubjectTagName)
                    </td>
                    <td>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @Html.PartialAsync("Pagination/_Pagination", Model.Paging).Result
</div>
