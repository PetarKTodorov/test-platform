@model CreateQuestionBM
@{
    ViewData["Title"] = "Create Question";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container-fluid px-5">
    <form class="w-50 mx-auto" asp-area="@ApplicationAreas.TEACHER" asp-controller="Questions" asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        @Html.FormGroupFor(model => model.Title)

        <div class="mb-3">
            @Html.DisplayNameFor(model => model.SubjectTagId)

            <select class="js-select2 form-control" asp-for="SubjectTagId" asp-items="@Model.SubjectTags">
                <option selected disabled>Please select</option>
            </select>
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.SubjectTagId)
            </span>
        </div>

        <div class="mb-3">
            @Html.DisplayNameFor(model => model.HasRandomizedAnswers)

            @Html.CheckBoxFor(model => model.HasRandomizedAnswers)
        </div>

        <div class="mb-3">
            @Html.DisplayNameFor(model => model.QuestionTypeId)

            <select class="js-select2 form-control" asp-for="QuestionTypeId" asp-items="@Model.QuestionTypes">
                <option selected disabled>Please select</option>
            </select>
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.QuestionTypeId)
            </span>
        </div>

        <div class="mb-3">
            @Html.DisplayNameFor(model => model.Answers)

            <div class="d-flex justify-content-end gap-1">
                <button type="button" class="btn btn-success js-add-answer">Add new answer</button>
                <button type="button" class="btn btn-danger js-remove-answer">Remove the last one</button>
            </div>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-success">Create</button>
        </div>
    </form>
</div>

@section Scripts {
    <script asp-src-include="~/js/answers*.js" defer></script>
}
